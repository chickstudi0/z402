{
  "name": "z402",
  "version": "0.1.0",
  "description": "Zero Trust x402 protocol",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./express": {
      "types": "./dist/adapters/express.d.ts",
      "import": "./dist/adapters/express.js",
      "require": "./dist/adapters/express.cjs"
    },
    "./hono": {
      "types": "./dist/adapters/hono.d.ts",
      "import": "./dist/adapters/hono.js",
      "require": "./dist/adapters/hono.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/adapters/express.ts src/adapters/hono.ts --format esm,cjs --clean --tsconfig tsconfig.json && npm run build:types",
    "build:types": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "express": "^4 || ^5",
    "hono": "^4",
    "@solana/web3.js": "^1.95.0 || ^2",
    "bs58": "^5",
    "tweetnacl": "^1"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "hono": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "@types/express": "^5.0.5",
    "typescript": "^5.9.3",
    "hono": "^4"
  },
  "keywords": [
    "solana",
    "x402",
    "payments",
    "express",
    "middleware",
    "zero-trust",
    "z402"
  ],
  "author": "chickstudio",
  "repository": { "type":"git", "url":"git+https://github.com/chickstudi0/z402.git" },
  "license": "MIT"
}
